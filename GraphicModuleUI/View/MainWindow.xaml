<Window x:Class="GraphicModuleUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:VM="clr-namespace:GraphicModuleUI.ViewModel"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        mc:Ignorable="d"
        Title="GraphicModule" Height="420" Width="800" >

    <Window.DataContext>
        <VM:MainWindowVM/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="IsVisible"/>
        <Style x:Key="RowDefiner">
            <Setter Property="RowDefinition.Height" Value="30"/>
        </Style>
        <Style x:Key="HeaderTb" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="388*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock  
            Text="Transmision Lines"
            Style="{StaticResource HeaderTb}" Height="18" Margin="0,10"/>

            <ListBox Name="ListBoxLines"
                     Width="auto"
                     MaxHeight="200"
                     ItemsSource="{Binding Lines}"
                     SelectionMode="Single" Margin="0,0,0,-89">
            </ListBox>
        </StackPanel>



        <StackPanel Grid.Column="1">
            <TextBlock Grid.Column="1" Text="Parameters"
                                   Style="{StaticResource HeaderTb}"   Padding="10" VerticalAlignment="Top"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="N = " />
                <Label
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Width="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding StripsNumber}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="20"
                    VerticalAlignment="Bottom"
                    Command="{Binding IncrementNCommand}"
                    Content="+" />
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="20"
                    VerticalAlignment="Top"
                    Command="{Binding DecrementNCommand}"
                    Content="-" />
            </Grid>
            <Label>Lines thickness</Label>
            <TextBox
                    x:Name="StripsThickness"
                    Height="20"
                    Margin="5"
                    HorizontalContentAlignment="Center"
                    Text="{Binding StripsThickness.ItemValue, UpdateSourceTrigger=PropertyChanged}">
            </TextBox>
            <Label Target="{Binding ElementName=SubstrateHeight}">Substrate height</Label>
            <TextBox
                    x:Name="SubstrateHeight"
                    Height="20"
                    Margin="5"
                    HorizontalContentAlignment="Center"
                    Text="{Binding SubstrateHeight.ItemValue, UpdateSourceTrigger=PropertyChanged}">
                
            </TextBox>
            <GroupBox
                    MaxHeight="150"
                    Padding="0,10,0,0"
                    Header="W, mm">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Widths}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5" VerticalAlignment="Top" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Center"
                                            Content="{Binding ItemName}" />
                                    <TextBox
                                            x:Uid="1"
                                            x:Name="Width"
                                            Grid.Column="1"
                                            MaxHeight="20"
                                            Text="{Binding ItemValue, UpdateSourceTrigger=PropertyChanged}" >
                                        
                                    </TextBox>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
            <GroupBox
     MaxHeight="150"
     Padding="0,10,0,0"
     Header="S, mm">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Slots}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                             Grid.Column="0"
                             VerticalAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Content="{Binding ItemName}" />
                                    <TextBox
                             Grid.Column="1"
                             MaxHeight="20"
                             Text="{Binding ItemValue, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
    <Button
        Height="30"
        Width="50"
        Margin="7"
        Content="Draw"
        Background="Cornsilk">

    </Button>
        </StackPanel>




        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border
                Margin="5"
                BorderBrush="Black"
                BorderThickness="2">
                <Viewbox>
                    <Canvas x:Name="Canvas" 
                            Width="500" 
                            Height="500"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ClipToBounds="True"/>
                </Viewbox>
            </Border>
        </StackPanel>
    </Grid>
</Window>
